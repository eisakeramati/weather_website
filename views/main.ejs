<%- include("main_head") -%>
<form class="form" action="/" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">City</label>
    <input name="city" class="form-control" placeholder="Enter City name">
    <small id="emailHelp" class="form-text text-muted">This option only shows the current weather of the city.</small>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="radio" id="F" value="option1">
    <label class="form-check-label" for="inlineRadio1">Fahrenheit</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="radio" id="C" value="option2">
    <label class="form-check-label" for="inlineRadio2">Celsius</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="radio" id="K" value="option3">
    <label class="form-check-label" for="inlineRadio3">Kelvin</label>
  </div>
  <button type="submit" class="btn btn-secondary">Go</button>
</form>
<%- include("main_foot") -%>
