<%- include("main_head") -%>
<!-- <h4>This form gives you weather data from 2 to 5, following days</h4> -->
<form class="form" action="/mult_days" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">City</label>
    <input name="city" class="form-control" placeholder="Enter City name">
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="radio" id="F" value="option1">
    <label class="form-check-label" for="inlineRadio1">Fahrenheit</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="radio" id="C" value="option2">
    <label class="form-check-label" for="inlineRadio2">Celsius</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="radio" id="K" value="option3">
    <label class="form-check-label" for="inlineRadio3">Kelvin</label>
  </div>
  <br>
  <br>
  <label class="mr-sm" for="blockFormCustomSelect">Select Days:</label>
  <select class="custom-select mr-sm-2" name="day" id="inlineFormCustomSelect">
    <option selected>Choose...</option>
    <option value="2">Following Two days</option>
    <option value="3">Following Three days</option>
    <option value="4">Following Four days</option>
    <option value="5">Following Five days</option>
  </select>
  <button type="submit" class="btn btn-secondary mtop">Go</button>
</form>
<%- include("main_foot") -%>
